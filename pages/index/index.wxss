page{
    color: #666666;
    padding: 10rpx;
}
/* 首页导航 */
.nav_wrap{

}
/*  自己滚动区域的组件 */
.nav{
    white-space: nowrap;
    padding: 5rpx 0;
}
/* 导航栏遍历 */
.nav_item{
    padding: 20rpx 45rpx;
    font-size: 30rpx;
    display: inline-block;
}
/* 导航栏点击 */
.nav_item.active{
    border-bottom: 5rpx solid #de68de;
}
/* 轮播图结构 */
.sliders{
    margin-top: 10rpx;
}
.sliders swiper{

    height: 220rpx;

}
.sliders navigator{
    width: 100%;
    height: 100%;
}
.sliders image{
    width: 100%;
    height: 100%;
}
/* 视频列表 */
.video_wrap{
    display: flex;
    flex-wrap: wrap;
    padding: 5rpx;
    justify-content: space-between;
}
.video_item{
width: 48%;
margin-bottom: 20rpx;

}
.video_img{
    position: relative;
    border-radius: 15rpx;
 
 }
.video_img image{
    width: 100%;
}
.video_img .video_info{
    position: absolute;
    bottom: 10rpx;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-around;
    color: #ffffff;
    font-size: 24rpx;
}
.video_title{
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    word-wrap: break-word;
 -webkit-line-clamp: 2;
 -webkit-box-orient: vertical;
}
